{
    "name": "federated-server",
    "version": "1.0.0",
    "description": "A federated server using Fedify that can accept follow requests",
    "main": "src/server.ts",
    "type": "module",
    "scripts": {
        "dev": "tsx --watch src/server.ts",
        "start": "tsx src/server.ts",
        "build": "tsc",
        "test": "node --test",
        "db:start": "docker-compose -f ../databases/docker-compose.yml up -d",
        "db:stop": "docker-compose -f ../databases/docker-compose.yml down",
        "db:logs": "docker-compose -f ../databases/docker-compose.yml logs -f",
        "db:admin": "cross-env DYNAMO_ENDPOINT=http://localhost:8000 dynamodb-admin",
        "redis:start": "docker run --name imageon-redis -p 6379:6379 -d redis:7-alpine",
        "redis:stop": "docker stop imageon-redis && docker rm imageon-redis",
        "redis:logs": "docker logs -f imageon-redis",
        "services:start": "node scripts/start-dev.mjs",
        "services:stop": "npm run db:stop; npm run redis:stop",
        "services:restart": "npm run services:stop && npm run services:start",
        "setup:table": "aws dynamodb create-table --cli-input-json file://../databases/create-imageonapp-table.json --endpoint-url http://localhost:8000",
        "seed:data": "aws dynamodb batch-write-item --request-items file://../databases/seed-imageonapp.json --endpoint-url http://localhost:8000",
        "full:setup": "npm run db:start && npm run setup:table && npm run seed:data"
    },
    "dependencies": {
        "@aws-sdk/client-dynamodb": "^3.654.0",
        "@aws-sdk/client-s3": "^3.862.0",
        "@aws-sdk/lib-dynamodb": "^3.654.0",
        "@fedify/fedify": "^1.8.1",
        "@fedify/redis": "^0.4.0",
        "@hono/node-server": "^1.11.1",
        "@js-temporal/polyfill": "^0.5.1",
        "axios": "^1.11.0",
        "dotenv": "^17.2.1",
        "ioredis": "^5.7.0",
        "firebase": "^12.0.0",
        "firebase-admin": "^12.7.0",
        "hono": "^4.1.0",
        "node-forge": "^1.3.1",
        "redis": "^4.6.13"
    },
    "devDependencies": {
        "@types/ioredis": "^4.28.10",
        "@types/node": "^20.19.9",
        "@types/node-forge": "^1.3.13",
        "cross-env": "^10.0.0",
        "dynamodb-admin": "^5.1.3",
        "tsx": "^4.20.3",
        "typescript": "^5.4.5"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}
