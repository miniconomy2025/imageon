# Local Development Environment Variables
# Copy this to .env.local and modify as needed

# Application Environment
NODE_ENV=development
API_PORT=3001

# DynamoDB Local Configuration
DYNAMODB_ENDPOINT=http://localhost:8000
DYNAMODB_REGION=us-east-1
DYNAMODB_TABLE_NAME=SocialMediaApp-Local
AWS_ACCESS_KEY_ID=dummy
AWS_SECRET_ACCESS_KEY=dummy

# Redis Configuration (if running locally)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-for-development-only
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug

# AWS S3 Configuration (for media uploads - use localstack for local dev)
AWS_S3_BUCKET=social-media-uploads-local
AWS_S3_REGION=us-east-1

# Database Monitoring
ENABLE_DB_LOGGING=true
SLOW_QUERY_THRESHOLD=100

# Email Configuration (for notifications - use service like MailHog for local testing)
EMAIL_SERVICE=development
EMAIL_FROM=noreply@socialmedia.local

# WebSocket Configuration
WS_PORT=3002
WS_CORS_ORIGIN=http://localhost:5173
